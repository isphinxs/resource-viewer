<% if @organization %>
    <h1 class="text-center">Funding Resources from <%= @organization.name %></h1>
<% else %>
    <h1 class="text-center">Funding Resources</h1>
<% end %>
<ul>
<% if @resources.blank? %>
    <p>No resources are available.</p>
<% else %>
    <p>The following resources are available.</p>
    <% @resources.each do |resource| %>
        <li><i class="fas fa-paperclip"></i> <%= link_to resource.name, resource_path(resource) %></li>
    <% end %>
    </ul>
<% end %>

<% if @organization %>
    <%= link_to "Add New Resource for #{@organization.name}", new_organization_resource_path(@organization), class: "button" %>
<% else %>
    <%= link_to "Add New Resource", new_resource_path, class: "button" %>
<% end %>