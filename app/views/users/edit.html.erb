<%= form_with model: @user, html: { class: "form" } do |f| %>
    <h1 class="text-center">Edit Account</h1>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.submit "Update Account", class: "button" %>
<% end %>

<%= form_with model: @user, method: "delete" do |f| %>
    <%= f.submit "Delete Account", class: "button" %>
<% end %>